<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - SynergySphere</title>
    <link rel="stylesheet" href="main.css">
    <script>
        (function() {
            // Set default theme to DARK to match the image
            const theme = localStorage.getItem('theme') || 'dark';
            if (theme === 'dark') {
                document.documentElement.classList.add('dark-mode-preload');
            }
        })();
    </script>
</head>
<body class="page-layout">

    <header class="main-header">
        <div class="logo">SynergySphere</div>
        <nav class="user-nav">
            <div class="nav-links">
                <a href="#" class="link-box">Home</a>
                <a href="#" class="link-box">Solutions</a>
                <a href="#" class="link-box">Features</a>
                <a href="signup.html" class="link-box">Sign Up</a>
            </div>
            <div class="theme-switch-wrapper">
                <span class="theme-label" id="light-mode-label">Light</span>
                <label class="theme-switch" for="theme-toggle"><input type="checkbox" id="theme-toggle" /><span class="slider"></span></label>
                <span class="theme-label" id="dark-mode-label">Dark</span>
            </div>
            <button id="menu-toggle-btn" class="menu-toggle-btn">
                <span></span><span></span><span></span>
            </button>
        </nav>
    </header>

    <main class="auth-container">
        <div class="auth-card">
            <h2>Login to account</h2>
            <p class="auth-prompt">
                Don't have an account? <a href="signup.html" class="text-link-button">Sign Up instead</a>
            </p>
            <form id="login-form">
                <div class="input-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="Enter your email" required>
                </div>
                <div class="input-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="Enter your password" required>
                </div>
                <button type="submit" class="auth-submit-button">Login</button>
            </form>
        </div>
    </main>

    <footer class="main-footer">
        <div>
            <h4>Quick Links</h4>
            <ul>
                <li><a href="#">Dashboard</a></li>
                <li><a href="#">Projects</a></li>
                <li><a href="#">Tasks</a></li>
            </ul>
        </div>
        <div>
            <h4>Company</h4>
            <ul>
                <li><a href="#">About Us</a></li>
                <li><a href="#">Careers</a></li>
                <li><a href="#">Contact</a></li>
            </ul>
        </div>
        <div>
            <h4>Connect with us</h4>
            <ul>
                <li><a href="#">Twitter</a></li>
                <li><a href="#">LinkedIn</a></li>
                <li><a href="#">Facebook</a></li>
            </ul>
        </div>
    </footer>

    <script src="main.js" defer></script>
</body>
</html>